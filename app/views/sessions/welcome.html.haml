%div.space-y-3
  - if logged_in?
    %p.text-3xl.font-bold.pb-3= "Welcome #{current_user.name}"

    = link_to "Search Books", books_path, class: "bg-blue-400 hover:bg-blue-500 text-white font-bold py-2 px-4 rounded-full"
  - else
    %span.text-3xl.font-bold Welcome to the Public Library Terminal
    %p.text-xl.font-semibold Please login or sign up