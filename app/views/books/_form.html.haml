= form_with(model: book, class: "space-y-3") do |form|
  - if book.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(book.errors.count, "error")
        prohibited this book from being saved:
      %ul
        - book.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :title, style: "display: block"
    = form.text_field :title, required: true
  %div
    = form.label :author, style: "display: block"
    = form.text_field :author, required: true
  %div
    = form.submit "Create", class: "bg-green-400 hover:bg-green-500 text-white font-semibold py-1 px-3 rounded-full"
